import java.util.Arrays;
import java.util.Optional;
import java.util.stream.Stream;

public class Task5 {
  static   Integer getFirst(Integer[] input){

        Stream<Integer> s= Arrays.stream(input).sorted();
        Optional<Integer> firstEl=s.findFirst();
        if(firstEl.isPresent())
            return firstEl.get();
        else
           return null;

    }
    public static void main(String[] args) {
       Integer[] input={18,5,2,4,15,3};
       // Integer[] input={};
       Integer first=getFirst(input);
       if(first!=null)
          System.out.println("First value: "+first);
      else
          System.out.println("First value not found, array is empty");
    }

}
